<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>

  <template class="View" parent="GtkBox">
    <property name="orientation">vertical</property>
    <child>
      <!-- TODO: Move this to Crystal, so shortcuts can be configurable -->
      <object class='GtkShortcutController'>
        <property name='scope'>local</property>
        <property name='propagation-phase'>capture</property>
        <child>
          <object class='GtkShortcut'>
            <property name='trigger'>&lt;Ctrl&gt;F</property>
            <property name='action'>action(view.search_start)</property>
          </object>
        </child>
        <child>
          <object class='GtkShortcut'>
            <property name='trigger'>&lt;Ctrl&gt;H</property>
            <property name='action'>action(view.search_replace_start)</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkCenterBox">
        <style>
          <class name="view-header"/>
        </style>
        <child type="center">
          <object class="GtkBox" id="header_start_box">
          </object>
        </child>
        <child type="center">
          <object class="GtkBox" id="header_center_box">
            <child>
              <object class="GtkLabel" id="label">
                <style><class name="heading"/></style>
              </object>
            </child>
          </object>
        </child>
        <child type="end">
          <object class="GtkBox" id="header_end_box">
            <child>
              <object class="GtkButton" id="close_btn">
                <property name="icon-name">window-close-symbolic</property>
                <property name="margin-start">12</property>
                <property name="action-name">win.close_view</property>
                <style><class name="flat"/></style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkScrolledWindow" id="container">
        <property name="vexpand">1</property>
      </object>
    </child>
  </template>
</interface>
