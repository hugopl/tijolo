<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>

  <template class="View" parent="GtkBox">
    <property name="orientation">vertical</property>
    <child>
      <object class="GtkCenterBox" id="header">
        <style><class name="tjl-header"/></style>
        <child type="center">
          <object class="GtkBox">
            <child>
              <object class="GtkLabel" id="label">
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="modified">
                <property name="visible">0</property>
                <property name="label">â€¢</property>
                <property name="margin-start">12</property>
              </object>
            </child>
          </object>
        </child>
        <child type="end">
          <object class="GtkBox">
            <child>
              <object class="GtkLabel" id="line_column" />
            </child>
            <child>
              <object class="GtkButton" id="close_btn">
                <property name="icon-name">window-close-symbolic</property>
                <property name="margin-start">12</property>
                <property name="action-name">win.close_view</property>
                <style><class name="flat"/></style>
              </object>
            </child>
          </object>
        </child>
        <child type="start">
          <object class="GtkMenuButton" id="menu_btn">
            <property name="focus-on-click">0</property>
            <style><class name="flat"/></style>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkScrolledWindow" id="container">
        <property name="vexpand">1</property>
      </object>
    </child>
  </template>
</interface>
